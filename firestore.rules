rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for now (development)
    // TODO: Add proper authentication rules for production
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Specific rules for translations collection
    match /translations/{translationId} {
      allow read: if true;
      allow write: if true;
      // In production, add: if request.auth != null;
    }
    
    // Test collection for connection testing
    match /test/{testId} {
      allow read, write: if true;
    }
  }
}