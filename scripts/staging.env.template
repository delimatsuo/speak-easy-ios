# Staging Environment Configuration Template
# Copy to .env.staging and fill in real values
# DO NOT COMMIT THE ACTUAL .env.staging FILE

# Google Cloud Platform Configuration
GCP_PROJECT_ID=universal-translator-staging
GCP_REGION=us-central1
SERVICE_NAME=universal-translator-api-staging
ENVIRONMENT=staging

# Firebase Configuration (iOS App)
FIREBASE_PROJECT_ID=universal-translator-staging
FIREBASE_API_KEY=your-firebase-staging-api-key-here
FIREBASE_BUNDLE_ID=com.universaltranslator.app.staging
FIREBASE_CLIENT_ID=your-staging-client-id-here
FIREBASE_REVERSED_CLIENT_ID=your-staging-reversed-client-id-here
FIREBASE_GCM_SENDER_ID=your-staging-sender-id-here
FIREBASE_STORAGE_BUCKET=universal-translator-staging.firebasestorage.app
FIREBASE_DATABASE_URL=https://universal-translator-staging-default-rtdb.firebaseio.com/

# API Keys (Backend)
GEMINI_API_KEY=your-gemini-staging-api-key-here
GOOGLE_TRANSLATE_API_KEY=your-google-translate-staging-api-key-here

# Security Configuration (Relaxed for testing)
JWT_SECRET=staging-jwt-secret-change-in-production
CERTIFICATE_PINNING_ENABLED=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=120

# Database Configuration
REDIS_URL=redis://staging-redis-url:6379

# Monitoring (Enhanced for testing)
LOG_LEVEL=DEBUG
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_REQUEST_LOGGING=true

# App Store Configuration
APP_STORE_ENVIRONMENT=staging
BUNDLE_ID=com.universaltranslator.app.staging
TEAM_ID=your-apple-team-id-here
