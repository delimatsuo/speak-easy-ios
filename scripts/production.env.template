# Production Environment Configuration Template
# Copy to .env.production and fill in real values
# DO NOT COMMIT THE ACTUAL .env.production FILE

# Google Cloud Platform Configuration
GCP_PROJECT_ID=universal-translator-prod
GCP_REGION=us-central1
SERVICE_NAME=universal-translator-api
ENVIRONMENT=production

# Firebase Configuration (iOS App)
FIREBASE_PROJECT_ID=universal-translator-prod
FIREBASE_API_KEY=your-firebase-api-key-here
FIREBASE_BUNDLE_ID=com.universaltranslator.app
FIREBASE_CLIENT_ID=your-client-id-here
FIREBASE_REVERSED_CLIENT_ID=your-reversed-client-id-here
FIREBASE_GCM_SENDER_ID=your-sender-id-here
FIREBASE_STORAGE_BUCKET=universal-translator-prod.firebasestorage.app
FIREBASE_DATABASE_URL=https://universal-translator-prod-default-rtdb.firebaseio.com/

# API Keys (Backend)
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key-here

# Security Configuration
JWT_SECRET=your-production-jwt-secret-here
CERTIFICATE_PINNING_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Database Configuration
REDIS_URL=redis://your-redis-url:6379

# Monitoring
LOG_LEVEL=INFO
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_REQUEST_LOGGING=true

# App Store Configuration
APP_STORE_ENVIRONMENT=production
BUNDLE_ID=com.universaltranslator.app
TEAM_ID=your-apple-team-id-here
