# Development Dockerfile with hot reload and debugging capabilities
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies including debugging tools
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    git \
    vim \
    htop \
    postgresql-client \
    redis-tools \
    && rm -rf /var/lib/apt/lists/*

# Install Python development tools first
RUN pip install --no-cache-dir \
    debugpy \
    watchdog \
    ipython \
    ipdb \
    rich

# Copy requirements files
COPY requirements_voice.txt requirements-dev.txt ./

# Install all dependencies
RUN pip install --no-cache-dir -r requirements_voice.txt
RUN pip install --no-cache-dir -r requirements-dev.txt

# Create development user (non-root)
RUN useradd -m -u 1000 devuser && chown -R devuser:devuser /app
USER devuser

# Environment variables for development
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PORT=8080
ENV ENVIRONMENT=development
ENV LOG_LEVEL=DEBUG

# Enable debugger
EXPOSE 5678

# Copy application code (will be overridden by volume mount)
COPY --chown=devuser:devuser . .

# Development startup script
COPY --chown=devuser:devuser scripts/dev-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/dev-entrypoint.sh

# Health check for development
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Expose the application port
EXPOSE 8080

# Development server with hot reload and debugging
ENTRYPOINT ["/usr/local/bin/dev-entrypoint.sh"]
CMD ["uvicorn", "app.main_voice:app", "--host", "0.0.0.0", "--port", "8080", "--reload", "--reload-dir", "app"]
